{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "Backend API for Developer Portfolio with authentication",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "db:test": "node -e \"import('./db.js').then(m => m.pool.query('SELECT 1').then(() => console.log('✅ MySQL OK')).catch(e => console.error('❌ MySQL Error:', e.message)))\"",
    "db:export": "node -e \"console.log('Use API: GET /api/auth/users/export or GET /api/projects/export/json')\"",
    "wasm:build": "powershell -ExecutionPolicy Bypass -File ../01_Extras/wasm-source/password-hash/build.ps1",
    "wasm:build:ps1": "powershell -ExecutionPolicy Bypass -File ../01_Extras/wasm-source/password-hash/build.ps1",
    "wasm:build:bash": "cd ../01_Extras/wasm-source/password-hash && bash build.sh",
    "wasm:watch": "cd ../01_Extras/wasm-source/password-hash && cargo watch -x 'build --target wasm32-wasip1 --release'"
  },
  "keywords": [
    "portfolio",
    "api",
    "express",
    "jwt"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@wasmer/wasi": "^1.2.1",
    "@wasmer/wasmfs": "^0.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5",
    "sanitize-html": "^2.17.0"
  }
}
